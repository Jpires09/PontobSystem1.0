<h1>Home</h1>

<table>
  <thead>
    <tr>
      <th>Horário</th>            
      <% unique_days = @slots.map(&:day).uniq %>
      <% unique_days.each do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% sorted_time = @slots.pluck(:time).uniq.sort %> 
    <% sorted_time.each do |time| %>
      <tr>
        <td><%= time %></td> 
        <% unique_days.each do |day| %>
          <% slot = @slots.find { |t| t.time == time && t.day == day } %>
          <td>
            <% if slot %>
              <%= link_to "#{slot.modality} - #{slot.age}", slot_path(slot) %>
            <% else %>
              <!-- Deixa a célula vazia se não houver turma para o horário e day da semana -->
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

