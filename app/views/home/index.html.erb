<h1>Home</h1>

<%= link_to "Planos", plans_path %>

<h2>Agenda:</h2>

<table>
  <thead>
    <tr>
      <th>Horário</th>            
      <% unique_days = unique_days(@groups) %>
      <% unique_days.each do |day| %>
        <th><%= day %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% sorted_time = sorted_times(@groups) %>
    <% sorted_time.each do |time| %>
      <tr>
        <td><%= time %></td>
        <% unique_days.each do |day| %>
          <% group = find_group(@groups, time, day) %>
          <td>
            <%= format_group_cell(group) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

