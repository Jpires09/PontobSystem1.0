<h1> Produtos: </h1>
<a href="/products/new"> Novo </a>

<ul>
  <% @products.each do |product| %>
    <li>
      <a href="/products/<%= product.id %>"> <%= product.name %> </a>
      <%= link_to 'Editar', edit_product_path(product.id) %>
      <%= link_to 'Excluir', product_path(product.id), method: :delete, 
      data: { confirm: 'Deseja excluir este item?' } %>
    </li>
  <% end %>
    