<div id="<%= dom_id calendar %>">
  <h1>Calendário do Ano <%= calendar.year %></h1>

  <table>
    <thead>
      <tr>
        <th>Data</th>
        <th>Dia da Semana</th>
        <th>Detalhes</th>
      </tr>
    </thead>

    <tbody>
      <% @calendar_days.each do |calendar_day| %>
        <tr>
          <td><%= calendar_day.date %></td>
          <td><%= translate_day(calendar_day.date.strftime("%A")) %></td>
          <td>
            <!-- Se você tiver sessões ou aulas associadas, pode exibi-las aqui -->
            <%= link_to 'Ver detalhes', calendar_day_path(calendar_day) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Voltar', calendars_path %>
</div>
