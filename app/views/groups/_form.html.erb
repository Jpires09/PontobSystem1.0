<%= form_with(model: @group, local: true) do |form| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>
      <ul>
        <% @group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :dia_da_semana %>
    <%= form.select :dia_da_semana, options_for_select([["Segunda-Feira", "Segunda-Feira"], ["Terça-Feira", "Terça-Feira"], ["Quarta-Feira", "Quarta-Feira"], ["Quinta-Feira", "Quinta-Feira"], ["Sexta-Feira", "Sexta-Feira"], ["Sábado", "Sábado"], ["Domingo", "Domingo"]]) %>
  </div>

  <div class="field">
    <%= form.label :horario %>
    <%= form.text_field :horario %>
  </div>

  <div class="field">
    <%= form.label :faixa_etaria %>
    <%= form.select :faixa_etaria, options_for_select([["Adults", "Adults"], ["Teens", "Teens"], ["Kids", "Kids"], ["Teens/Kids", "Teens/Kids"], ["Mini", "Mini"]]) %>
  </div>

  <div class="field">
    <%= form.label :modalidade %>
    <%= form.select :modalidade, options_for_select([["Parkour", "Parkour"], ["Acrobacias", "Acrobacias"], ["AcrobaKids", "AcrobaKids"]]) %>
  </div>

  <div class="field">
    <%= form.label :professor_titular_id, "Professor Titular" %>
    <%= form.collection_select :professor_titular_id, Employee.all, :id, :name, prompt: "Selecione um professor" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
