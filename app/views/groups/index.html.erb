<h1>Turmas</h1>

<table>
  <thead>
    <tr>
      <th>Dia da Semana</th>
      <th>Horário</th>
      <th>Faixa Etária</th>
      <th>Modalidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.day %></td>
        <td><%= group.time %></td>
        <td><%= group.age %></td>
        <td><%= group.modality %></td>
        <td><%= link_to 'Show', group %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New group', new_group_path %>
