<h1>Turmas</h1>

<table>
  <thead>
    <tr>
      <th>Dia da Semana</th>
      <th>Horário</th>
      <th>Faixa Etária</th>
      <th>Modalidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turmas.each do |turma| %>
      <tr>
        <td><%= turma.dia_da_semana %></td>
        <td><%= turma.horario %></td>
        <td><%= turma.faixa_etaria %></td>
        <td><%= turma.modalidade %></td>
        <td><%= link_to 'Show', turma %></td>
        <td><%= link_to 'Edit', edit_turma_path(turma) %></td>
        <td><%= link_to 'Destroy', turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Turma', new_turma_path %>
