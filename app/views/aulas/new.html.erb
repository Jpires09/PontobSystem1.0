  </div>

  <div class="field">
    <%= form.label :tecnico %>
    <%= form.text_field :tecnico %>
  </div>

  <div class="field">
    <%= form.label :fisico_grupo, "Fisico Grupo" %>
    <%= form.select :fisico, options_for_select([['MI', 'MI'], ['MS', 'MS'], ['TR', 'TR']]), {}, { name: 'aula[fisico][grupo]' } %>
  </div>

  <div class="field">
    <%= form.label :fisico_exercicio, "Fisico Exercicio" %>
