<%= form_with model: @aula, local: true do |form| %>
  <% if @aula.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@aula.errors.count, "error") %> prohibited this aula from being saved:</h2>
      <ul>
        <% @aula.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :data %>
    <%= form.text_field :data, value: @aula.data.present? ? @aula.data.strftime('%d/%m/%Y') : nil %>
  </div>
  
  <div class="field">
    <%= form.label :conteudo %>
    <%= form.text_field :conteudo %>
  </div>

  <div class="field">
    <%= form.label :objetivo %>
    <%= form.text_field :objetivo %>
  </div>

  <div class="field">
    <%= form.label :aquecimento_articular, "Aquecimento Articular" %>
    <%= form.text_field :aquecimento_articular, value: @aula.aquecimento.present? ? @aula.aquecimento["articular"] : nil %>
  </div>

  <div class="field">
    <%= form.label :aquecimento_cardio, "Aquecimento Cardio" %>
    <%= form.text_field :aquecimento_cardio, value: @aula.aquecimento.present? ? @aula.aquecimento["cardio"] : nil %>
  </div>

  <div class="field">
    <%= form.label :aquecimento_tecnico, "Aquecimento TÃ©cnico" %>
