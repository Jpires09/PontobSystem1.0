<h1>Aulas</h1>

<% @aulas.each do |aula| %>
  <ul>
    <li>
        <td><%= aula.data %></td>
        <td><%= aula.conteudo %></td>
      <td> | <%= link_to 'Show', aula %></td>
      <td> | <%= link_to 'Edit', edit_aula_path(aula) %></td>
      <td> | <%= link_to 'Destroy', aula, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </li>
  </ul>    
  
<% end %>

<%= link_to 'New Aula', new_aula_path %>
